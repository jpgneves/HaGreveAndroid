<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:title="@string/pref_cat_ui">
        <SwitchPreference android:key="pref_theme" android:title="@string/pref_theme_label" android:switchTextOff="@string/pref_theme_dark_desc" android:switchTextOn="@string/pref_theme_light_desc" android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_cat_conn">
        <SwitchPreference android:summaryOn="@string/pref_conn_autoupdate_toggle" android:disableDependentsState="false" android:summaryOff="@string/pref_conn_autoupdate_toggle" android:key="pref_conn_autoupdate_toggle" android:title="@string/pref_conn_autoupdate_toggle_title" android:switchTextOff="@string/no" android:switchTextOn="@string/yes" android:defaultValue="true"/>
        <ListPreference android:entries="@array/refresh_option_labels" android:entryValues="@array/refresh_option_values" android:title="@string/pref_conn_autoupdate_interval" android:dependency="pref_conn_autoupdate_toggle" android:key="pref_conn_autoupdate_interval" android:defaultValue="300000" android:summary="@string/pref_conn_autoupdate_summary"/>
    </PreferenceCategory>
    

</PreferenceScreen>